<body>
  <div class="container">
    <h3>
      Results for: <%= query %>
    </h3>
    <table class="videoContainer">
      <% for (const video of videos) { %>
        <tr class="video">
          <td>
            <a href="/video/<%= video.id %>">
              <img src="<%= video.thumbnail %>" />
            </a>
          </td>
          <td>
            <div class="title">
              <a href="/video/<%= video.id %>">
                <%= video.title %>
              </a>
            </div>
            <div class="uploader">
              Added by: <%= video.username %>
            </div>
          </td>
        </tr>
        <% } %>
        <% if (!videos || !videos.length) { %>
          <p id="noResults">No results found</p>
        <% } %>
    </table>
  </div>
  <link rel="stylesheet" href="/stylesheets/videos.css">
</body>